{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "JustTalk AI Help Center",
  "colors": {
    "primary": "#007AFF",
    "light": "#007AFF",
    "dark": "#007AFF"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Help",
        "groups": [
          {
            "group": "Knowledge base",
            "pages": [
              "index",
              "knowledge-base/overview",
              "knowledge-base/student-guide",
              "knowledge-base/teacher-guide",
              "knowledge-base/faq-troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "Changelog",
        "groups": [
          {
            "group": "Announcements",
            "pages": [
              "changelog/index"
            ]
          }
        ]
      }
    ],
    "global": { "anchors": [] }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {},
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/justtalkai",
      "linkedin": "https://linkedin.com/company/justtalkai"
    }
  },
  "redirects": [
    { "source": "/student-guide", "destination": "/knowledge-base/student-guide" },
    { "source": "/teacher-guide", "destination": "/knowledge-base/teacher-guide" },
    { "source": "/overview", "destination": "/knowledge-base/overview" },
    { "source": "/faq", "destination": "/knowledge-base/faq-troubleshooting" }
  ]
}
